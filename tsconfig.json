{
  "extends": "./config/tsconfig.json",
  "compileOnSave": true,
  "declaration": true,
  "allowJs": true,
  "baseUrl": ".",
  "paths": {
    "asset": ["app/web/asset"],
    "component": ["app/web/component"],
    "framework": ["app/web/framework"],
    "store": ["app/web/store"]
  },
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs"
  },
  "include": [
    "index.ts",
    "app/**/*.ts",
    "config/**/*.ts",
    "mock/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "public",
    "app/web",
    "app/public",
    "app/view"
  ]
}
